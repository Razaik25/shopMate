<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ../partials/head %>
  </head>

  <body>
    <header>
      <%- include ../partials/nav %>
    </header>
 <div id="bg-card">
    <div class="container">
      <div class="starter-template">
        <h1>ShopMate - Your Personal Shopping List Organizer</h1>
      </div>
      <div class="container2">
        <% if (data.length ===0 ) { %>
          <div class="nodata">
            <p>Start adding your shopping lists</p>
          </div>
       <% } %>
        <% data.forEach (function(lists) { %>
          <div class="listcard">
            <ul>
               <form  action="/lists/?_method=DELETE" method="post">
              <div class="card-listname">
                <p><b>List Name: </b><%=lists.listname%></p>
              </div>
             <div class="card-data">
                <% for( var i=0;i<lists.items_name.length;i++){ %>
                    <div class="item-img">
                    <img src="./css/images/item.png">
                     <p><b>Name: </b><%=lists.items_name[i]%></p>
                     <!-- <p><b>Quantity: </b><%=lists.items_quantity[i]%></p>
                     <p><b>Brought: </b><%=lists.brought[i]%></p> -->
                   </div>
                <% } %>
              </div>
              <input  id ="delete" type="submit" class="btn btn-danger"value="Delete" >
              <input type="hidden" name="listID" value="<%=lists.list_id%>">
            </form>
              <form  action="/lists/<%=lists.listname%>/<%=lists.list_id%>/items/edit" method="get">
               <input id="update" type="submit" class="btn btn-primary" value="Update" >
             </form>
             </ul>
            </div>
        <% }) %>
        </div>
      </div>
    </div>
    <%- include ../partials/footer %>
  </body>
</html>
