        		  	<input class="ghost-button signup" type="submit" value="Sign Up">
							</div>

     			</form>

    			<form  action="/users/login" method="get">
						<div class="box-text">
      				<input class="ghost-button" type="submit" value="Already a user?">
						</div>
    		  </form>
			</div> <!-- box -->
		</div> <!-- bg-container -->
	  <%- include ../partials/footer %>
	</body>
</html>
